<HomeScreen>
    on_enter: root.set_user(hello_bar)
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            
            id: hello_bar
            
            MDBoxLayout:
                size: self.width, self.height
                MDFlatButton:
                    text: "Logout"
                    on_release: root.logout()
                                       
        MDScreen:
            MDBottomNavigation:
                MDBottomNavigationItem:
                    id: job_cards
                    name: 'Job Cards'
                    text: 'Job Cards'
                    icon: 'format-list-bulleted'
                    on_tab_press:root.current_tab(self)

                    MDLabel:
                        text: "Job Cards"
                        font_size: 32
                        halign: 'center'
                    BoxLayout:
                        orientation: 'vertical'
                        MDRoundFlatButton:
                            text: 'Add row'
                            pos_hint: {"center_x": .5}
                            on_press: root.add_row()
                        MDRoundFlatButton:
                            text: 'Remove row'
                            pos_hint: {"center_x": .5}
                            on_press: root.remove_row()
                        MDRoundFlatButton:
                            text: 'Print rows'
                            pos_hint: {"center_x": .5}
                            on_press: root.print_rows()
                    

            MDFloatingActionButton:
                icon: "android"
                elevation: 2
                pos_hint: {'center_x': 0.9, 'center_y': 0.2}
                text:'Back'
                on_press: 
                    root.fab_pressed()
                    root.manager.transition.direction = 'left'

<LoginScreen>
    on_enter: root.check_login()
    
    Screen:
        MDCard:
            radius: [20]
            size_hint: None,None
            size: 300,400
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: 15
            spacing: 15
            orientation: 'vertical'
            MDLabel:
                text: "LOGIN"
                halign: "center"
                font_size: 32
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}   
            MDTextField:
                id: user_name
                hint_text: "User Name"
                icon_left: "account"
                multiline: False

            MDScreen:

                MDTextField:
                    id: user_password
                    hint_text: 'Password'
                    password: True
                    icon_left: "key-variant"
                    multiline: False

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {'center_x': 0.9, 'center_y': 0.6}
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        user_password.password = False if user_password.password is True else True

            MDLabel:
                id: login_error
                color: 'red'
                    
            MDRoundFlatButton:
                text: "Login"
                pos_hint: {"center_x": .5}
                on_press:
                    root.login(user_name,user_password) 
            MDRoundFlatButton:
                text: "Register"
                pos_hint: {"center_x": .5}
                on_press: 
                    login_error = ''
                    root.manager.current = 'RegisterScreen'
                    root.manager.transition.direction = 'right'

<JobCardScreen>
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            MDBoxLayout:
                size: root.width, root.height
            MDIconButton:
                icon: "arrow-left"
                on_press: root.back()

        MDScreen:

<RegisterScreen>

    Screen:
        MDCard:
            radius: [20]
            size_hint: None,None
            size: 300,400
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: 15
            spacing: 15
            orientation: 'vertical'
            MDLabel:
                text: "Register User"
                halign: "center"
                font_size: 32
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}   
            MDTextField:
                id: reg_user_name
                hint_text: "User Name"
                icon_left: "account"
                multiline: False

            MDScreen:

                MDTextField:
                    id: reg_user_password
                    hint_text: 'Password'
                    password: True
                    icon_left: "key-variant"
                    multiline: False

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {'center_x': 0.9, 'center_y': 0.8}
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        reg_user_password.password = False if reg_user_password.password is True else True

            MDScreen:

                MDTextField:
                    id: reg_user_password_2
                    hint_text: 'Password again'
                    password: True
                    icon_left: "key-variant"
                    multiline: False

                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {'center_x': 0.9, 'center_y': 0.8}
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        reg_user_password_2.password = False if reg_user_password_2.password is True else True

            MDLabel:
                id: login_error
                color: 'red'
                    
            MDRoundFlatButton:
                text: "Register"
                pos_hint: {"center_x": .5}
                on_press: root.register_user(reg_user_name,reg_user_password,reg_user_password_2,login_error)

            MDRoundFlatButton:
                text: 'Back'
                pos_hint: {"center_x": .5}
                on_press:
                    reg_user_name.text = ''
                    reg_user_password.text = ''
                    reg_user_password_2.text = ''
                    root.manager.current = 'LoginScreen'
                    root.manager.transition.direction = 'left'